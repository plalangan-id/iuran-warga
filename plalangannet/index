    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cek Tagihan RT RW Net</title>
    <style>
        :root { --primary: #2980b9; --bg: #f4f7f6; --text: #2c3e50; }
        body { font-family: sans-serif; background: var(--bg); color: var(--text); padding: 20px; text-align: center; }
        .card { background: white; padding: 20px; border-radius: 15px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); max-width: 400px; margin: auto; }
        input { width: 100%; padding: 12px; margin: 10px 0; border: 1px solid #ddd; border-radius: 8px; box-sizing: border-box; }
        .status-box { margin-top: 20px; padding: 15px; border-radius: 10px; display: none; }
        .lunas { background: #d4edda; color: #155724; border: 1px solid #c3e6cb; }
        .belum { background: #f8d7da; color: #721c24; border: 1px solid #f5c6cb; }
    </style>
</head>
<body>

    <h2>üì° PORTAL RT RW NET</h2>
    <div class="card">
        <p>Masukkan Nama Pelanggan untuk cek tagihan bulan ini:</p>
        <input type="text" id="cariNama" placeholder="Contoh: Budi" onkeyup="cekTagihan()">
        
        <div id="hasilBox" class="status-box">
            <h3 id="namaUser"></h3>
            <p id="statusTeks"></p>
            <small id="tglBayar"></small>
        </div>
    </div>

    <script>
        // Ganti dengan URL CSV Google Sheets khusus tagihan internet Anda
        const csvUrl = 'URL_CSV_GOOGLE_SHEETS_TAGIHAN_ANDA';

        async function cekTagihan() {
            const input = document.getElementById('cariNama').value.toLowerCase();
            const box = document.getElementById('hasilBox');
            if(input.length < 3) { box.style.display = "none"; return; }

            try {
                const resp = await fetch(csvUrl);
                const data = await resp.text();
                const rows = data.split('\n').slice(1);
                
                let ketemu = false;
                rows.forEach(row => {
                    const cols = row.split(',');
                    if(cols[1] && cols[1].toLowerCase().includes(input)) {
                        ketemu = true;
                        box.style.display = "block";
                        document.getElementById('namaUser').innerText = cols[1].toUpperCase();
                        document.getElementById('statusTeks').innerText = "Status: LUNAS ‚úÖ";
                        document.getElementById('tglBayar').innerText = "Dibayar pada: " + cols[0];
                        box.className = "status-box lunas";
                    }
                });

                if(!ketemu) {
                    box.style.display = "block";
                    document.getElementById('namaUser').innerText = "TIDAK DITEMUKAN";
                    document.getElementById('statusTeks').innerText = "Status: BELUM BAYAR ‚ùå";
                    document.getElementById('tglBayar').innerText = "";
                    box.className = "status-box belum";
                }
            } catch (e) { console.error("Gagal ambil data"); }
        }
    </script>
</body>
</html>
